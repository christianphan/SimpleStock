<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="340dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/seekBar1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="25dp"
                android:textColor="#1a1010"
                android:layout_gravity="center"
                android:id="@+id/EquityPortfolio"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="5"
                android:textSize="15dp"
                android:id="@+id/EquityPortfolioTitle"
                android:text="Total Equity"
                android:layout_gravity="center"
                android:textColor="#303032"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="25dp"
                android:textColor="#1a1010"
                android:layout_gravity="center"
                android:id="@+id/PortfolioValue"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="5"
                android:textSize="15dp"
                android:id="@+id/portfolioValueTitle"
                android:text="Value Gained"
                android:layout_gravity="center"
                android:textColor="#303032"/>





        </LinearLayout>



    </LinearLayout>

</LinearLayout>
    </ScrollView>